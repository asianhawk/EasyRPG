<UserControl x:Class="Editor.Controls.TiledSelectableImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:Editor.Controls" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="ControlLoaded" MouseLeftButtonDown="ControlMouseLeftButtonDown"
             x:Name="userControl">

    <Canvas x:Name="canvas">
        <Controls:NearestNeighborImage x:Name="image" Width="{Binding Path=Width, ElementName='userControl'}" Height="{Binding Path=Height, ElementName='userControl'}"/>

        <Rectangle x:Name="rectangle" StrokeThickness="3" Visibility="Collapsed"/>
    </Canvas>
</UserControl>
