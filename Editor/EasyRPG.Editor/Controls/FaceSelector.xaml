<UserControl x:Class="Editor.Controls.FaceSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:Editor.Controls" Height="Auto"
             mc:Ignorable="d" d:DesignWidth="200"
             DataContextChanged="FaceSelectorDataContextChanged">
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="LightBlue" BorderThickness="1" Margin="4">
            <Controls:NearestNeighborImage x:Name="faceImage" Width="96" Height="96"/>
        </Border>

        <Button Grid.Column="1" Content="Browse" Margin="4" Padding="20, 1" Width="Auto" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="BrowseButtonClick" />
    </Grid>
</UserControl>
