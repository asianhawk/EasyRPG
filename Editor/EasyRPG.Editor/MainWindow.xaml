<Window x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
        Title="MainWindow" Height="600" Width="800" Loaded="WindowLoaded" Closing="WindowClosing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="OpenFileMenuItemClick"/>
                <MenuItem Header="Exit" Click="ExitFileMenuItemClick"/>
            </MenuItem>
        </Menu>

        <ad:DockingManager x:Name="dockManager" Grid.Row="1">
            <ad:ResizingPanel x:Name="resizingPanel" Orientation="Horizontal">
                <ad:DocumentPane x:Name="documentPane"/>
                <ad:DockablePane x:Name="dockablePane"/>
            </ad:ResizingPanel>
        </ad:DockingManager>

        <StatusBar Grid.Row="2">
            <StatusBarItem/>
        </StatusBar>
    </Grid>
</Window>
